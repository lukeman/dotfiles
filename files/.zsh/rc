# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Colors.
autoload -U colors
colors
setopt prompt_subst

# Disable equals expansion
unsetopt EQUALS

# Ignore duplicates in history.
setopt hist_ignore_dups

plugins=(
  brew
)

. $ZSH/oh-my-zsh.sh
. ~/.zsh/prompt
. ~/.zsh/aliases
. ~/.zsh/pythonenv

# General history related stuff.
HISTFILE=~/.zsh_history
HISTIGNORE="ls:ls *:cd:cd -:pwd;exit:date:* --help"
HISTSIZE=1000000
SAVEHIST=1000000
setopt extendedglob notify
setopt append_history
setopt inc_append_history
bindkey -e

# I much prefer a bash style history function, so I disable stuff
unsetopt AUTO_MENU
unsetopt correct_all

# Mappings for Ctrl/Option-left-arrow and Ctrl/Option-right-arrow for
# moving across words.
bindkey "\e\e[C" forward-word
bindkey "\e\e[D" backward-word

[[ -d "$HOME/.rbenv" ]] && eval "$(rbenv init -)"

if [ `uname` == "Darwin" ]; then
  if [[ -f `brew --prefix`/share/python/virtualenvwrapper.sh ]]; then
    . `brew --prefix`/share/python/virtualenvwrapper.sh
  fi
fi

source /usr/local/opt/autoenv/activate.sh
