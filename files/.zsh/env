# General OS environment settings.
export EDITOR="subl -w"
export GIT_EDITOR=$EDITOR
export PATH="$HOME/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/sbin"
export MANPATH="/usr/local/share/man:/usr/X11/man:/usr/share/man"

PATH_GIT="/usr/local/share/git-core/contrib"
PATH_PYTHON="/usr/local/share/python"
PATH_RUBY="/usr/local/opt/ruby/bin"
PATH_NPM="/usr/local/share/npm/bin"

export PATH="$PATH:$PATH_GIT:$PATH_RUBY:$PATH_NPM:$PATH_PYTHON"

# Node.
export NODE_PATH="/usr/local/lib/node"


# Postgres
export PGDATA=/usr/local/var/postgres
